#!/bin/sh

# Script that starts vpn-slice with the hostnames/subnets that need to
# be accessed via the VPN.
# Based on <https://medium.com/@edgar/how-to-split-tunnel-vpn-traffic-on-mac-561da7353110>.

vpn-slice \
    139.80.0.0/16 \
    10.0.0.0/8 \
    10.96.160.0/24 \
    concept.otago.ac.nz \
    corpapp.otago.ac.nz \
    evision.otago.ac.nz \
    file-transfer.otago.ac.nz \
    isdb.uod.otago.ac.nz \
    ismdb.otago.ac.nz \
    its-boxi.otago.ac.nz \
    ourdrive.otago.ac.nz \
    resourcebooker.otago.ac.nz \
    sobmac0011.staff.uod.otago.ac.nz \
    staff.desktop.otago.ac.nz \
    tts-web-prod.otago.ac.nz
