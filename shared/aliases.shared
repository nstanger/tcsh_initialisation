alias empty "rm -rf ~/.Trash/*"
alias unlocktrash "sudo chown -R ${USER}:${GROUP} ~/.Trash/*"
# alias ls "ls -FG"
# note: requires MacPorts installed gls
alias ls "/opt/local/bin/gls --classify --color=auto"
alias l "ls -l"
alias ll "ls -la"
alias man "/usr/local/bin/openman"
alias rm "rm -i"
alias locate "locate -d /var/db/locate.database"
alias smbclient "rlwrap /opt/local/bin/smbclient"
alias sqlplus "rlwrap /Users/nstanger/bin/sqlplus"
alias beep "tput bel"
alias grep "grep --color=auto"
